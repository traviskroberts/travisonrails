<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<title><%= @page_title ||= 'Travis on Rails - Admin' %></title>

	<%= javascript_include_tag :defaults %>
	<%= stylesheet_link_tag 'manager' %>
	<%= yield :header %>

	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="MSSmartTagsPreventParsing" content="TRUE" />
	<meta name="keywords" content="" />
	<meta name="description" content="" />
	<meta name="rating" content="General" />
	<meta name="MS.LOCALE" content="EN-US" />
	<meta name="robots" content="index,follow" />
	
	<!--[if lt IE 7]>
		<style type="text/css">
			#content, #header{ width:880px;}
			#information th{ background-position: 100% 0; }
		</style>
	<![endif]-->
	
</head>
<body>
	<div id="header">
		<p id="login">
			<% if session[:user] -%>
				Logged in as: <%= @logged_in_email %>
				&nbsp;|&nbsp;
				<%= link_to 'Sign-out', { :controller => '/manage/posts', :action => 'logout' } %>
			<% end -%>
		</p>
		<%= image_tag 'logo_ro-trans.png', :class => 'logo' %>
		<ul class="nav">
			<li class='active'><span class="left_edge"></span><%= link_to "Site Content", :controller => '/manage/posts', :action => 'index' %><span class="right_edge"></span></li>
		</ul>
	</div> <!-- header -->
	<div id="content">
		<% if session[:user] -%>
			<div id="manageNav">
				<ul>
					<li><%= link_to 'Manage Posts', admin_posts_path %></li>
				</ul>
				<p><%= link_to 'View Site', home_url %></p>
			</div><!-- manageNav -->
			
			<div id="mainCell">				
				<div class="main_t">
				  	<div class="c"></div>				
				</div>	

				<div class="main_m">
			 		<div class="c">
						<div id="actual_content">
							<%= render :partial => 'shared/notice_div' %>
							<%= yield %>
						</div><!-- actual_content -->
					</div>
				</div>

				<div class="ftr">
					<div class="c"></div>
				</div>
			</div> <!-- mainCell -->
		<%- else -%>
			<%= yield %>
		<% end -%>
		<div style="clear:both;"></div>
	</div> <!-- content -->
</body>
</html>