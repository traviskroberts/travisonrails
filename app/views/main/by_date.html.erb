<%- if !@posts.blank? -%>
  <%= render 'post', :collection => @posts %>
<%- elsif !@post.blank? -%>
  <div class="blog_box">
    <%- @page_title = "Travis on Rails &raquo; #{@post.title}" -%>
    <h1><%= @post.title %></h1>

    <div class="date_box">
      <p class="month"><%= @post.date.strftime("%b").upcase %></p>
      <p class="day"><%= @post.date.strftime("%d") %></p>
      <p class="year"><%= @post.date.strftime("%Y") %></p>
    </div> <!-- .date_box -->

    <%=raw @post.content %>
    <%= show_tags(@post) %>

    <br />

    <a name="comments"></a>
    <%- @post.approved_comments.each do |comment| -%>
      <div class="comment">
        <p class="author"><strong><%= comment.name %></strong> said on <%= comment.date.to_formatted_s(:long) %>:</p>
        <p><%= comment.content %></p>
      </div> <!-- .comment -->
    <%- end -%>

    <%= render 'disqus', :post => @post %>
  </div> <!-- .blog_box -->
<%- else -%>
  <p>There are no posts for this date.</p>
<%- end -%>
