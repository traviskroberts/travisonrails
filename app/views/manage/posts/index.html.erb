<p><%= link_to "+ Add new post", new_admin_post_path %></p>

<% if @posts and @posts.length > 0 -%>
	<table width="100%" cellspacing="0">
		<tr>
			<th width="5%"></th>
			<th width="5%"></th>
			<th width="30%" class="left">Title</th>
			<th width="30%">Date</th>
			<th width="30%">Comments</th>
		</tr>
		<% @posts.each do |post| -%>
			<tr id="<%= dom_id(post) %>">
				<td>
					<%= link_to image_tag('edit.gif'), edit_admin_post_path(post) %>
				</td>
				<td>
					<%= link_to_remote	image_tag('trash.gif'),
										:url => admin_post_path(post),
										:method => :delete,
										:confirm => "Are you sure you want to delete this post?" %>
				</td>
				<td><%= post.title %></td>
				<td class="center"><%= post.date %></td>
				<td class="center">
					<%= link_to('manage', comments_admin_post_path(post)) if post.comments.length > 0 %>
				</td>
			</tr>
		<% end -%>
	</table>
	<br>
	<%= will_paginate @posts %>
<% else -%>
	<p>No posts were found in the database.</p>
<% end -%>