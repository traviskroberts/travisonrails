<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title ||= 'Travis on Rails - Admin' %></title>

    <%= stylesheet_link_tag 'manager' %>
    <%= javascript_include_tag :defaults %>
    <%= yield :header %>

    <meta content='text/html; charset=utf-8' http-equiv='Content-Type' />
    <!--[if lt IE 7]>
      <style type="text/css">
        #content, #header { width: 880px; }
        #information th { background-position: 100% 0; }
      </style>
    <![endif]-->
  </head>

  <body>
    <div id="header">
      <p id="login">
        <%- if current_user -%>
          <%= link_to 'Sign-out', logout_admin_posts_path %>
        <%- end -%>
      </p>

      <%= image_tag 'logo_ro-trans.png', :class => 'logo' %>

      <ul class="nav">
        <li class="active">
          <span class="left_edge"></span>
          <%= link_to "Site Content", admin_posts_path %>
          <span class="right_edge"></span>
        </li>
      </ul>
    </div> <!-- #header -->

    <div id="content">
      <%- if current_user -%>
        <div id="manageNav">
          <ul>
            <li><%= link_to 'Manage Posts', admin_posts_path %></li>
          </ul>

          <p><%= link_to 'View Site', home_url %></p>
        </div> <!-- #manageNav -->
        
        <div id="mainCell">
          <div class="main_t">
            <div class="c"></div>
          </div> <!-- .main_t -->
          
          <div class="main_m">
            <div class="c">
              <div id="actual_content">
                <%= render 'shared/notice_div' %>
                <%= yield %>
              </div> <!-- actual_content -->
            </div> <!-- .c -->
          </div> <!-- .main_m -->
          
          <div class="ftr">
            <div class="c"></div>
          </div> <!-- .ftr -->
        </div> <!-- #mainCell -->
      <%- else -%>
        <%= render 'shared/notice_div' %>
        <%= yield %>
      <%- end -%>

      <div class="clear"></div>
    </div> <!-- #content -->
  </body>
</html>
