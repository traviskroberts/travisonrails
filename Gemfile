source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'pg'
gem 'jquery-rails'
gem 'authlogic'
gem 'stringex'
gem 'will_paginate'
gem 'unicorn'
gem 'newrelic_rpm'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'turbo-sprockets-rails3'
end

group :development do
  gem 'pry'
  gem 'quiet_assets'
  gem 'dotenv-rails'
  gem 'foreman'
end

group :production do
  gem 'heroku_rails_deflate'
end
