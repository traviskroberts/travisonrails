.formClusterGroup
  %h4 Blog Post Details
  %p
    %label{:for => 'post_title'} Title
    %br/
    = f.text_field :title, :class => 'formfield'
  %p
    %label{:for => 'post_date'} Date
    %br/
    = f.date_select :date, :order => [:month, :day, :year]
  %p
    = f.check_box :featured
    %label{:for => 'post_featured'} Featured
  %p
    %label{:for => 'post_content'} Content
    %br/
    = f.text_area :content, :size => '35x25', :class => 'formfield'
  %p
    %label{:for => 'tags'} Tags
    %br/
    = text_field_tag :tags, (@tags.nil? or @tags.empty?) ? params[:tags] : @tags.join(", "), :class => 'formfield'
