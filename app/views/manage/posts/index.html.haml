= link_to image_tag('btn_add_blog_post.gif', :alt => '+ Add Blog Post'), new_admin_post_path, :class => 'add_button'
%h1 Blog Posts

.search_form
  %h3 Search
  - form_tag({:action => 'search'}) do
    = text_field_tag "query", "", :class => "search_query"
    = submit_tag "Submit"

#information
  - if @posts and @posts.length > 0
    %table
      %tr
        %th.left{:width => "30%"} Title
        %th{:width => "30%"} Date
        %th{:width => "25%"} Comments
        %th{:width => "5%"} Featured?
        %th{:width => "5%"} &nbsp;
        %th{:width => "5%"} &nbsp;
      - @posts.each do |post|
        %tr{:id => dom_id(post)}
          %td= post.title
          %td.center= post.date.strftime("%b %d, %Y")
          %td.center= link_to('manage', comments_admin_post_path(post)) if post.comments.length > 0
          %td.center= image_tag('featured.png', :alt => 'yes') if post.featured
          %td.edit_delete= link_to 'edit', edit_admin_post_path(post)
          %td.edit_delete.delete= link_to_remote	image_tag('trash.gif'), :url => admin_post_path(post), :method => :delete, :confirm => "Are you sure you want to delete this post?"
    %br/
    = will_paginate @posts
  - else
    %p No posts were found in the database.
