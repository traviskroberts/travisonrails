<%= link_to image_tag('btn_add_blog_post.gif', :alt => '+ Add Blog Post'), new_admin_post_path, :class => 'add_button' %>
<h1>Blog Posts</h1>

<div id="information">
	<% if @posts and @posts.length > 0 -%>
		<table width="100%" cellspacing="0">
			<tr>
				<th width="30%" class="left">Title</th>
				<th width="30%">Date</th>
				<th width="30%">Comments</th>
				<th width="5%"></th>
				<th width="5%"></th>
			</tr>
			<% @posts.each do |post| -%>
				<tr id="<%= dom_id(post) %>">
					<td><%= post.title %></td>
					<td class="center"><%= post.date.strftime("%b %d, %Y") %></td>
					<td class="center">
						<%= link_to('manage', comments_admin_post_path(post)) if post.comments.length > 0 %>
					</td>
					<td class="edit_delete">
						<%= link_to 'edit', edit_admin_post_path(post) %>
					</td>
					<td class="edit_delete delete">
						<%= link_to_remote	image_tag('trash.gif'),
											:url => admin_post_path(post),
											:method => :delete,
											:confirm => "Are you sure you want to delete this post?" %>
					</td>
				</tr>
			<% end -%>
		</table>
		<br>
		<%= will_paginate @posts %>
	<% else -%>
		<p>No posts were found in the database.</p>
	<% end -%>
</div><!-- information -->